<?xml version="1.0"?>
<config>
    <modules>
        <Acadaca_History>
            <version>0.0.1</version>
        </Acadaca_History>
    </modules>
    <global>
        <blocks>
            <history><class>Acadaca_History_Block</class></history>
        </blocks>
        <helpers>
            <history><class>Acadaca_History_Helper</class></history>
        </helpers>
        <models>
            <history>
                <class>Acadaca_History_Model</class>
                <resourceModel>history_resource</resourceModel>
            </history>
            <history_resource>
                <class>Acadaca_History_Model_Resource</class>
                <entities>
                    <product_attribute>
                        <table>acadaca_history_product_attribute</table>
                    </product_attribute>
                </entities>
            </history_resource>
        </models>
        <resources>
            <acadaca_history_setup>
                <setup>
                    <module>Acadaca_History</module>
                </setup>
            </acadaca_history_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <history>
                <use>standard</use>
                <args>
                    <module>Acadaca_History</module>
                    <frontName>history</frontName>
                </args>
            </history>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <acadaca_history before="Mage_Adminhtml">Acadaca_History_Adminhtml</acadaca_history>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <history_product_attribute>
                        <class>history/observer</class>
                        <method>updateProductAttributeHistory</method>
                    </history_product_attribute>
                </observers>
            </catalog_product_prepare_save>
        </events>    
    </adminhtml>
</config>